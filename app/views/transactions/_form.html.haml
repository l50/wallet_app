= simple_form_for(@transaction, html: { class: 'form-horizontal' }) do |f|
  = f.input :date, order: [:month, :day, :year], ampm: true
  %br/
  = f.input :description, label: "Transaction Description: ", input_html: { class: "form-control" }
  = f.input :amount, label: "Value: ", input_html: { class: "form-control" }
  = f.collection_select(:category_id, Category.all, :id, :name, { prompt: 'Select Category'}, {class: 'form-control'})
  %br/
  = f.input :transaction_type, label: "Transaction Type: ", as: :select, collection: Transaction.transaction_types.keys
  .to_a
  = f.button :submit, class:"button", data: { disable_with: "Creating New Transaction..." }